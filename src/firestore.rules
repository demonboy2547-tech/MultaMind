
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the request is from the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the /users collection
    match /users/{userId} {
      // A user can read their own document.
      allow get: if isOwner(userId);

      // A user can create their own document if they are logged in,
      // the document ID matches their UID, and they are setting the plan to "standard".
      allow create: if isOwner(userId) && request.resource.data.plan == 'standard';

      // A user can update their own document. The rules for what can be updated
      // should be more specific in a real app (e.g., user can't change their own plan to 'pro').
      // For now, we allow general updates by the owner.
      allow update: if isOwner(userId);
      
      // Users cannot list other users or delete their own record through the client.
      allow list, delete: if false;

      // Rules for the user's chats subcollection
      match /chats/{chatId} {
        // The owner can perform all operations on their own chats.
        allow read, list, create, update, delete: if isOwner(userId);

        // Rules for the messages subcollection within a chat
        match /messages/{messageId} {
          // The owner can read, list, and create messages in their own chats.
          allow read, list, create: if isOwner(userId);
          
          // Messages are immutable; they cannot be updated or deleted by the client.
          allow update, delete: if false;
        }
      }
    }
  }
}
