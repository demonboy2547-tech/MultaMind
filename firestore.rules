
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the request is from the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the /users collection
    match /users/{userId} {
      // A user can read, create, and update their own user document.
      allow get, update: if isSignedIn() && isOwner(userId);
      // A user can create their own document if the `id` in the document matches their auth UID.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      // Users cannot list other users or delete their own record through the client.
      allow list, delete: if false;

      // Rules for the user's chats subcollection
      match /chats/{chatId} {
        // The owner can perform all operations on their own chats.
        allow read, list, create, update, delete: if isSignedIn() && isOwner(userId);

        // Rules for the messages subcollection within a chat
        match /messages/{messageId} {
          // The owner can read, list, and create messages in their own chats.
          allow read, list, create: if isSignedIn() && isOwner(userId);
          
          // Messages are immutable; they cannot be updated or deleted by the client.
          allow update, delete: if false;
        }
      }
    }
  }
}
